@using Microsoft.AspNetCore.Identity
@using ClothesShop.Models
@inject SignInManager<AppUser> SignInMannager
@inject UserManager<AppUser> UserManager


<div class="navbar-nav ml-auto py-0">
    @if (SignInMannager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="nav-item nav-link">@UserManager.GetUserName(User)</a>
        @*<a asp-area="Identity" asp-page="/Account/Logout" class="nav-item nav-link">Logout</a>*@
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link text-dark">Đăng Xuất</button>
        </form>
    }else{

    <a asp-area="Identity" asp-page="/Account/Login" class="nav-item nav-link">Đăng Nhập</a>
    <a asp-area="Identity" asp-page="/Account/Register" class="nav-item nav-link">Đăng Ký</a>
    }
</div>