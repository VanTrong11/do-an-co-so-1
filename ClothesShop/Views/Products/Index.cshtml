@model IEnumerable<ClothesShop.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid pt-2" style="padding-left : 61px">
    <p>
        <a asp-action="Create" style="font-size:1.2rem">Tạo mới</a>
    </p>

    <div class="row px-xl-1">
        <div class="col-lg-12 table-responsive mb-5">
            <table class="table table-bordered text-center mb-0">
                <thead class="bg-secondary text-dark">
                    <tr>
                        <th class="col-3">Sản Phẩm</th>
                        <th>Mô tả</th>
                        <th>Giá</th>
                        <th>Giảm Giá</th>
                        <th>Đánh Giá</th>
                        <th> </th>
                        <th> </th>
                    </tr>
                </thead>

                <tbody class="align-middle">
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="align-middle" style="text-align:center"><img src="img/@p.Image" alt="" style="width: 50px;"> @p.Name</td>
                                <td class="align-middle" style="line-height: 2.7rem; overflow: hidden;display: block;display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;">
                                @p.Description
                                </td>
                                <td class="align-middle">@String.Format("{0:#,###,###}",(Convert.ToDouble((@p.Price))))VNĐ</td>
                                <td class="align-middle">@p.Discount</td>
                                <td class="align-middle">@p.Evaluate</td>
                                <td class="align-middle">
                                <a asp-action="Edit" asp-route-id="@p.Id" class="crud-btn">Sửa</a>
                                
                                </td>
                                <td class ="align-middle">
                                <a asp-action="Delete" asp-route-id="@p.Id" class="crud-btn">Xóa</a>
                                </td>
                            </tr>

                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

