@page
@model ClothesShop.Areas.Admin.Pages.Role.DeleteModel
@{
    ViewData["Title"] = "Xóa role ";
}
<div style="padding-left: 62px;padding-top: 15px;">
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Bạn có chắc chắn muốn xóa <strong>@Model.role.Name</strong></></p>
            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a class="btn btn-primary" asp-area="Admin" asp-page="./Index">Danh sách role</a>
            </div>
        </form>
    </div>
</div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}