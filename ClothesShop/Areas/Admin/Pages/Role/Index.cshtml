@page "/admin/role"
@model ClothesShop.Areas.Admin.Pages.Role.IndexModel
@{
    ViewData["Title"] = "Danh sách các role";
}
<div style="padding-left: 62px;padding-top: 15px;">

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="mb-2">
    <a class="btn btn-secondary"  asp-page="./Create">Tạo role mới</a>
    <a class="btn btn-secondary" asp-area="Admin"  asp-page="../User/Index">Quản lý thành viên</a>
</div>

<table class="table">
    <tr>
        <th>Tên Role (vai trò)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach(var role in Model.roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a class="btn btn-success btn-sm" asp-area="Admin" asp-page="./Delete" asp-route-roleid="@role.Id">Xóa</a>
            </td>
        </tr>
    }
</table>
</div>