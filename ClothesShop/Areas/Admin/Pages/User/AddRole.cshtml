@page
@model ClothesShop.Areas.Admin.Pages.User.AddRoleModel
@{
    ViewData["Title"] = "Cập nhập role";
}
<div style="padding-left: 62px;padding-top: 15px;">

<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                @Html.ListBoxFor(m => m.RoleName, Model.allRoles , new{
                    id = "id.select-roles",
                    @class = "form-control"
                })
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cập nhật" class="btn btn-primary" />
                <a class="btn btn-primary" asp-area="Admin" asp-page="./Index">Danh sách role</a>
            </div>
        </form>
    </div>
</div>
</div>